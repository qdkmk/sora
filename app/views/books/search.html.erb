<h1>検索</h1>

<%= form_tag(search_books_path,method: :get) do %>
  <%= text_field_tag :search %>
  <%= submit_tag 'Search', :name => nil %>
<% end %>
<table>
  <tr>
  <th>Title</th>
  <th>author</th>
  <th></th>
  </tr>
  <% @books.each do |book|%>
<table>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= link_to 'detail',book %></td>
  </tr>
  </table>
  <% end %>
