<h1>図書一覧</h1>
<div class="center">
  <div class="search input-group">
    <%= form_tag(search_books_path,method: :get,class:"form-group") do %>
    <div class="input-group">
      <%= text_field_tag :search,"",class:"form-control" %>
      <span class="input-group-btn">
        <%= submit_tag 'Search', :name => nil ,class: "btn btn-default"%>
      </span>
    <% end %>
  </div>
</div>

<%= will_paginate @books, renderer: BootstrapPagination::Rails%>
<table class="table">
  <tr>
<th>タイトル</th>
<th>著者</th>
<th>読了時間目安</th>
<th>人気度</th>
</tr>

<% @books.each do |book|%>

<tr data-link="<%= book_path(book.id) %>">
    <td><%= book.title %></td>
    <td><%= book.author %></td>

    <td><%=raw readtime?(book) %></td>
    <td><%=raw rating?(book) %></td>
</tr>
<% end %>
</table>
<%= will_paginate @books, renderer: BootstrapPagination::Rails%>
</div>
<script>
  $("tr[data-link]").click(function() {
  window.location = $(this).data("link")
})
</script>
