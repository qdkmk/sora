<div class="revue-form-wrapper">
<h2>新しい感想を投稿する</h2>
<%= form_with model: @revue, class: "revue-form",
    local: true do |f|%>
<%= render 'shared/error_messages', object: f.object %>
<div class="form-group">
  <label>Title</label>
  <%= f.text_field :title, placeholder: "30文字まで",class: "text"%>
</div>
<div class="form-group">
  <label>Content</label>
  <%= f.text_area :content, placeholder: "1500文字まで",class: "text content" %>
</div>
<%= f.hidden_field :book_id, value: @book.id %>
<%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
</div>
